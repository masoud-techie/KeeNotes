<%= render "shared/inner_navbar" %>

<div class="mx-auto p-3">

  <div class="px-3">
    <h4 class="mt-3">All Notes</h4>
    <div class="mb-3">
      <%= link_to new_note_path, class: "btn btn-teal btn-sm" do %>
        <i class="bi bi-pencil-square me-1"></i>
        Take a note ...
      <% end %>
    </div>
  </div>
  <%= render partial: "notes/notes_grid",
             locals: { notes: @notes, empty_message: "" } %>
</div>
