<h1 class="mb-4">My Notes</h1>

<div class="mb-3">
  <%= link_to "New Note", new_note_path, class: "btn btn-primary me-2" %>
  <% if user_signed_in? && current_user.notes.exists? %>
  <%= link_to "Favorites ⭐", favorites_notes_path,
      class: "btn btn-outline-warning btn-sm me-2" %>
  <% end %>
</div>

<% if @notes.present? && @notes.any? %>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @notes.each do |note| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to note.title, note %>
              <% if note.favorite %> <span class="text-warning">⭐</span> <% end %>
            </h5>
            <p class="card-text"><%= note.description %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted">
            <% if note.updated_at > note.created_at %>
              Updated: <%= note.updated_at.strftime("%b %d, %Y") %>
            <% else %>
              Created: <%= note.created_at.strftime("%b %d, %Y") %>
            <% end %>
            </small>

            <br>
            <%= link_to "Edit", edit_note_path(note), class: "btn btn-sm btn-outline-primary me-1 mt-1" %>
            <%= link_to "Delete", note, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger mt-1" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No notes yet.</p>
<% end %>
