<h1>Favorite Notes ⭐</h1>

<%= link_to "All Notes", notes_path %> |
<%= link_to "New Note", new_note_path %>

<hr>

<% if @notes.present? && @notes.any? %>
  <% @notes.each do |note| %>
    <h3>
      <%= link_to note.title, note %>
      <% if note.favorite %> ⭐ <% end %>
    </h3>

    <p><%= note.description %></p>

    <small>
      Created: <%= note.created_at.strftime("%Y-%m-%d") %>,
      Updated: <%= note.updated_at.strftime("%Y-%m-%d") %>
    </small>

    <br>

    <%= link_to "Edit", edit_note_path(note) %> |
    <%= link_to "Delete", note, method: :delete, data: { confirm: "Are you sure?" } %>

    <hr>
  <% end %>
<% else %>
  <p>No favorite notes yet.</p>
<% end %>
