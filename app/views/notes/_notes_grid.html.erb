<% if notes.present? && notes.any? %>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% notes.each do |note| %>
      <div class="col">
        <div class="card shadow-lg border-0">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="fw-bold mb-1">
                <%= link_to note.title, note, class: "text-dark text-decoration-none" %>
              </h5>

              <% if note.favorite %>
                <i class="bi bi-star-fill text-saffron"></i>
              <% else %>
                <i class="bi bi-star text-saffron"></i>
              <% end %>
            </div>

            <p class="card-text text-muted small"><%= note.description %></p>

            <% if note.user != current_user %>
              <div class="pb-2">
                <span class="badge bg-green">
                  Shared by <%= note.user.email %>
                </span>
              </div>
            <% end %>
          </div>

          <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <% if note.updated_at > note.created_at %>
                  Updated: <%= note.updated_at.strftime("%b %d, %Y") %>
                <% else %>
                  Created: <%= note.created_at.strftime("%b %d, %Y") %>
                <% end %>
              </small>

              <div class="d-flex gap-3">
                <%= link_to edit_note_path(note),
                            class: "fs-5 text-dark text-decoration-none" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_to note_path(note),
                              method: :delete,
                              data: { confirm: "Delete this note?" },
                              class: "btn btn-link text-danger fs-5 p-0" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
