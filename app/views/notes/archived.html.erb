<h2>Archived Notes</h2>
<%= link_to unarchive_note_path(note),
            method: :patch,
            class: "btn btn-sm btn-outline-success",
            title: "Restore" do %>
  <i class="bi bi-arrow-counterclockwise"></i>
<% end %>

<%= render partial: "notes/notes_grid",
           locals: { notes: @notes, empty_message: "No archived notes." } %>
