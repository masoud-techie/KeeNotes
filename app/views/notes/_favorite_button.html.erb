<%= button_to toggle_favorite_note_path(note),
              method: :patch,
              class: "btn btn-link p-0 text-warning",
              title: note.favorite ? "Unfavorite" : "Favorite" do %>
  <% if note.favorite %>
    <i class="bi bi-pin-fill text-muted fs-5"></i>
  <% else %>
    <i class="bi bi-pin text-muted fs-5"></i>
  <% end %>
<% end %>