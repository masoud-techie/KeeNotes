<%= render "shared/inner_navbar" %>
<div class="todo-list-new-container p-3">
  <div class="page-header">
    <h3>Create New Todo List</h3>
  </div>

  <div class="form-container">
    <%= form_with model: @todo_list, local: true do |f| %>
      <% if @todo_list.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@todo_list.errors.count, "error") %> prohibited this todo list from being saved:</h2>
          <ul>
            <% @todo_list.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Enter list title (e.g., Groceries, Work Tasks)", class: "form-control" %>
      </div>

      <div class="form-actions mt-3">
        <%= f.submit "Create Todo List", class: "btn btn-teal btn-sm" %>
        <%= link_to "Cancel", todo_lists_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
